<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
    <div class="my-10 text-lg">
        <span><%= image_tag blog_post.cover_image.variant(resize_to_limit: [500, 500]) if blog_post.cover_image.attached? %></span>
        <span><%= link_to blog_post.title, blog_post %></span>
        <% if blog_post.draft? %>
            <span class="p-2 rounded bg-gray-100 text-gray-900">Draft</span>
        <% elsif blog_post.scheduled? %>
            <span class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</span>
        <% end %>
        <%= blog_post.content %>
    </div>
<% end %>

<div class="my-10">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>